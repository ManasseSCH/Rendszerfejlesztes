@using WebMatrix.Data;

@{
    ViewBag.Title = "Login Page";


    var username = Request.Form["id"];
    var password = Request.Form["password"];
    System.Data.SqlClient.SqlConnection conn = new System.Data.SqlClient.SqlConnection();
    conn.ConnectionString="Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=master;Integrated Security=True;Connect Timeout=30;Encrypt=False";
    conn.Open();

    System.Data.SqlClient.SqlCommand command = new System.Data.SqlClient.SqlCommand("SELECT * FROM users ",conn);

    command.Parameters.Add(new System.Data.SqlClient.SqlParameter("0", 1));

    System.Data.SqlClient.SqlDataReader reader = command.ExecuteReader();
    string response = "";
    while (reader.Read())
    {
        response += String.Format("{0}\t{1}\t{2}\t{3}\t", reader[0], reader[1], reader[2], reader[3]);
    }
}
